{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "NodeNext", // don't have to import actual filenames, can import extensionless files
    "declaration": true, // generate .d.ts files
    "sourceMap": true, // generate source map
    "outDir": "lib", // output compiled js, d.ts, and source map to dist folder
    "lib": ["dom", "es2020", "es2018.promise", "ESNext.Intl"],
    "module": "NodeNext",
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./lib"]
}
